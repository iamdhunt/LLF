                    <li>
                        <%= link_to image_tag("Media 3.png", class: "nav_icons media"), media_path, title: "Media", alt: "Media", :class => "" %>
                    </li>
                <% end %>
                <li>
                    <%= link_to image_tag("nav_icon_market.png", class: "nav_icons"), market_path, title: "Market", alt: "Market", :class => "" %>
