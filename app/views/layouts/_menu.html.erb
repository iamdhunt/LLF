<div id="nav_bar">	
   <div class="nav_container">
        <div class="query_nav">
            <%= render partial: 'layouts/query' %>
        </div>
        <div class="primary_nav">
            <ul id="main_menu">
                <li class="h_i">
                    <% if member_signed_in? %>
                        <%= link_to image_tag("favicon 3.ico", :class => "menu_logo"), profile_path(current_member), title: 'Home', alt: 'Home'  %>
                    <% else %>       
                        <%= image_tag("favicon 3.ico", :class => "menu_logo") %>
                    <% end %>
                </li>
                <li>
                    <%= link_to "Community", community_path, alt: 'Community' %>
                </li>
                <% unless member_signed_in? %>
                    <li>
                        <%= link_to "Media", media_path, alt: 'Media' %>
                    </li>
                <% end %>
                <li>
                    <%= link_to "Market", market_path, alt: 'Market' %>
                </li>
                <li>
                    <%= link_to "Events", events_path, alt: 'Events' %>
                </li>
                <li>
                    <%= link_to "Projects", projects_path, alt: 'Projects' %>
                </li>
            </ul>
        </div>

        <% if member_signed_in? %>
            <div class='nav_search'>
                <%= render partial: 'search/search' %>
            </div>

            <div class="mem_drop">
                <span class="btn-group">
                    <%= link_to image_tag(current_member.avatar.url(:thumb), :class => "nav_av ", title: current_member.full_name, id: ""), "/page.html", :class => "dropdown-toggle", :data => {:toggle => "dropdown", :target=>"#"} %>
                    <ul class="dropdown-menu member">
                        <li>
                            <%= link_to 'View My Profile', profile_path(current_member), class: 'menu_name' %>
                        </li>
                        <li>
                            <%= link_to '<i class="icon-edit menu_icons"></i> Account Settings'.html_safe, edit_member_path, class: 'top_links a' %>
                        </li>
                        <li class="grey_bottom">
                            <%= link_to '<i class="icon-circle-arrow-right icon-grey menu_icons"></i> Following'.html_safe, profile_following_path(current_member), class: 'bottom_links' %>
                        </li>
                        <li class="grey_bottom">
                            <%= link_to '<i class="icon-circle-arrow-left icon-grey menu_icons"></i> Followers'.html_safe, profile_followers_path(current_member), class: 'bottom_links' %>
                        </li>
                        <li class="grey_bottom">
                            <%= link_to '<i class="icon-th icon-grey menu_icons"></i> Stream'.html_safe, profile_stream_path(current_member), class: 'bottom_links' %>
                        </li>
                        <li class="grey_bottom">
                            <%= link_to '<i class="icon-music icon-grey menu_icons"></i> Media'.html_safe, profile_media_path(current_member), class: 'bottom_links' %>
                        </li>
                        <li class="grey_bottom">
                            <%= link_to '<i class="icon-th-list icon-grey menu_icons"></i> Market'.html_safe, profile_market_path(current_member), class: 'bottom_links' %>
                        </li>
                        <li class="grey_bottom">
                            <%= link_to '<i class="icon-calendar icon-grey menu_icons"></i> Events'.html_safe, profile_events_path(current_member), class: 'bottom_links' %>
                        </li>
                        <li class="grey_bottom">
                            <%= link_to '<i class="icon-bullhorn icon-grey menu_icons"></i> Projects'.html_safe, profile_projects_path(current_member), class: 'bottom_links' %>
                        </li>
                        <li>
                            <%= link_to '<i class="icon-off menu_icons"></i> Logout'.html_safe, sign_out_path, class: 'top_links sign_out' %>
                        </li>
                    </ul>
                </span>
            </div>

            <div class="nav_links">
                <ul>
                    <li>
                        <%= link_to image_tag("Discover 4.png", class: "nav_icons discover"), search_path, title: "Discover", alt: "Discover", :class => "" %>
                    </li>
                    <li>
                        <%= link_to image_tag("Media 4.png", class: "nav_icons discover"), media_path, title: "Media", alt: "Media", :class => "" %>
                    </li>
                    <li>
                        <div class="alert_wrap">
                            <%= link_to conversations_path, title: "Conversations", alt: "Conversations", :class => "" do %>
                                <%= image_tag("Messages.png", class: "nav_icons messages") %>    
                            <% end %> 
                            <span class="m_alert">
                                <% unless current_member.mailbox.inbox({:read => false}).count == 0 %>
                                    <div id="m_alert" class=""></div>
                                <% end %>
                            </span>
                        </div>
                    </li>
                    <li class="not_li2">
                        <div class="alert_wrap">
                            <%= link_to notifications_path, title: "Notifications", alt: "Notifications", :class => "" do %>
                                <%= image_tag("Notification 2.png", class: "nav_icons notifications") %>
                                <span class="n_alert">
                                    <% unless current_member.mailbox.notifications({:read => false}).count == 0 %>
                                        <div id="n_alert"></div>
                                    <% end %>
                                </span>
                            <% end %>
                        </div>
                    </li>
                </ul> 
            </div>    
        <% else %>
            <div class="nav_links">
                <%= link_to "Login", sign_in_path, :class => "member_links" %>
                <%= link_to "Join!", join_path, :class => "member_links" %>
            </div>
        <% end %>
    </div>

	<div style="clear:both;"></div>
</div>