                    <% else %>       
                        <%= link_to image_tag("Favicon.png", :class => "menu_logo"), root_path, title: 'Home', alt: 'Home'  %>
                    <% end %>
                </li>
                <li>
                    <%= link_to image_tag("nav_icon_community.png", class: "nav_icons"), community_index_path, title: "Community", alt: "Community", :class => "" %>
                </li>
