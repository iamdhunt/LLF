<!DOCTYPE html>
<html>
<head>
  <title>LLF | Haven for the Bold</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>



	<div id="nav_bar">	
	   <div class="primary_nav">
	   		<% if member_signed_in? %>
	   			<%= link_to "Home", profile_path(current_member) %>
	   		<% else %>
				<%= link_to "Home", root_path %>
			<% end %>
			<a href="#">Community</a>
			<a href="#">Events</a>
			<a href="#">Projects</a>
			<a href="#">Market</a>
		</div> 

		<div class="nav_links">
			<% if member_signed_in? %>
				<%= link_to "Sign Out", sign_out_path, :class => "member_links" %>
				<%= link_to current_member.full_name, profile_path(current_member), :class => "member_links" %>
				<%= link_to image_tag("Notification 2.png", :class => "nav_icons notifications"), "#" %>
				<%= link_to image_tag("Messages.png", :class => "nav_icons messages"), "#" %>
			<% else %>
				<%= link_to "Sign In", sign_in_path, :class => "member_links" %>
				<%= link_to "Join!", join_path, :class => "member_links" %>
			<% end %>
		</div>

		<div style="clear:both;"></div>
	</div>
 
<div id="pagewrap" style="padding-top:60px;">

	<% flash.each do |type, message| %>
	  <div class="alert <%= flash_class type %>">
	      <button class="close" data-dismiss="alert">x</button>
	      <%= message %>
	  </div>
	<% end %>

	<%= yield %>		

	<div id="widget_wrap">

		<div id="widget_left">
		
			<div id="widget_left_1" class="bottom_widgets">
			
				<div class="events_widget bottom_widgets_content">            
				</div>
				
				<div class="view_all_widget">
					<a href="#">View All Events &raquo;</a>
				</div>
				
			</div>
			
		  <div id="widget_left_2" class="bottom_widgets left_inside">
		  
				<div class="projects_widget bottom_widgets_content">            
				</div>
				
				<div class="view_all_widget">
					<a href="#">View All Projects &raquo;</a>
				</div>
				
		  </div>
		  
		</div>
		
		<div id="widget_right">
		
		  <div id="widget_right_1" class="bottom_widgets right_inside">
		  
				<div class="market_widget bottom_widgets_content">
				</div>
				
				<div class="view_all_widget">
					<a href="#">View Market &raquo;</a>
				</div>
				
		  </div>
		  
		  <div id="widget_right_2" class="bottom_widgets">
		  
				<div class="featured_member_widget bottom_widgets_content">
				</div>
				
		  </div>
		  
		</div>
		
	<div style="clear: both;"></div> 
	</div>

<!--/widgets-->

	<div id="footer_wrap">
		
		<div id="footer_top" class="box_font">
			<%= link_to "Spotlights", spotlights_path %> &#8226; 
			<%= link_to "Contests", contests_path %> &#8226; 
			<%= link_to "FAQ's", faqs_path %> &#8226; 
			<%= link_to "Contact Us", contact_us_path %> &#8226; 
			<%= link_to "Terms", terms_path %> &#8226; 
			<%= link_to "Privacy", privacy_path %> &#8226; 
			<a href="http://livinglifefearless.com/blog">BLOG</a> &#8226; 
			<a href="http://havenforthebold.tv/" class="bold_tv">BOLD.TV</a>	
		</div>
	  
		<div id="footer_bottom" class="box_font">
			LLF &copy; 2014 
		</div>

	</div>

<!--/footer-->

</div>

<!--/pagewrap-->

</body>
</html>
