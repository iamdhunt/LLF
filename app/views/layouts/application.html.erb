<!DOCTYPE html>
<html>
<head>
  <title>LLF</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>



	<div id="nav_bar">	
	   <div class="primary_nav">
			<%= link_to "Home", new_member_registration_path %>
			<a href="/groups.html">Community</a>
			<a href="/events.html">Events</a>
			<a href="/projects.html">Projects</a>
			<a href="/market.html">Market</a>
		</div> 

		<div class="nav_links">
			<% if member_signed_in? %>
				<%= link_to "Log Out", logout_path %>
				<%= link_to current_member.full_name, edit_member_registration_path %>
			<% else %>
				<%= link_to "Log In", login_path %>
				<%= link_to "Join!", join_path %>
			<% end %>
		</div>

		<div style="clear:both;"></div>
	</div>
 
<div id="pagewrap" style="padding-top:60px;">

	<% flash.each do |type, message| %>
	  <div class="alert <%= flash_class type %>">
	      <button class="close" data-dismiss="alert">x</button>
	      <%= message %>
	  </div>
	<% end %>

	<%= yield %>		

	<div id="widget_wrap">

		<div id="widget_left">
		
			<div id="widget_left_1" class="bottom_widgets">
			
				<div class="events_widget bottom_widgets_content">            
				</div>
				
				<div class="view_all_widget">
					<a href="/events.html">View All Events &raquo;</a>
				</div>
				
			</div>
			
		  <div id="widget_left_2" class="bottom_widgets left_inside">
		  
				<div class="projects_widget bottom_widgets_content">            
				</div>
				
				<div class="view_all_widget">
					<a href="/projects.html">View All Projects &raquo;</a>
				</div>
				
		  </div>
		  
		</div>
		
		<div id="widget_right">
		
		  <div id="widget_right_1" class="bottom_widgets right_inside">
		  
				<div class="market_widget bottom_widgets_content">
				</div>
				
				<div class="view_all_widget">
					<a href="/market.html">View Market &raquo;</a>
				</div>
				
		  </div>
		  
		  <div id="widget_right_2" class="bottom_widgets">
		  
				<div class="featured_member_widget bottom_widgets_content">
				</div>
				
		  </div>
		  
		</div>
		
	<div style="clear: both;"></div> 
	</div>

<!--/widgets-->

	<div id="footer_wrap">
		
		<div id="footer_top" class="box_font">
			<a href="/spotlights/spotlights.html">Spotlights</a> &#8226; 
			<a href="/contests.html">Contests</a> &#8226; 
			<a href="/faqs.html">FAQ's</a> &#8226; 
			<a href="/contact_us.html">Contact Us</a> &#8226; 
			<a href="/terms.html">Terms</a> &#8226; 
			<a href="/privacy.html">Privacy</a> &#8226; 
			<a href="http://livinglifefearless.com/blog" target="_blank">BLOG</a> &#8226; 
			<a href="http://havenforthebold.tv/" target="_blank" class="bold_tv">BOLD.TV</a>	
		</div>
	  
		<div id="footer_bottom" class="box_font">
			LLF &copy; 2014 
		</div>

	</div>

<!--/footer-->

</div>

<!--/pagewrap-->

</body>
</html>
