  <% if current_member.following?(member) %>

    <div class="btn-group">
        <%= link_to('Following', member_follow_path(member.to_param, current_member.get_follow(member).id), :method => :delete, :remote => true, :class => "btn btn-follow") %>
     </div>


    <% else %>

      <div class="btn-group">
        <%= link_to("Follow", member_follows_path(member.to_param), :method => :post, :remote => true, :class => "btn") %>
      </div>

  <% end %>