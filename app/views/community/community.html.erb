<% title "LLF | Community" %>

<%= render :partial => "banner" %>

<%= render :partial => "newsticker" %>

<div id="community_wrap">
    <div id="cm_nav">
        <ul class="nav nav-tabs" id="">
            <li class="active">
                <%= link_to "Community Stream", "#stream", :data => {:toggle=>"tab"}, class: '' %>
            </li>
            <li>
                <%= link_to "Community Media", "#media", :data => {:toggle=>"tab"}, class: '' %>
            </li>
        </ul>
    </div>

    <div class="tab-content">
        <div class="tab-pane active" id="stream">
            <span id="community">
                <div id="stream_filters">
                    <div id="community_stream_filters" class="form-inline">
                        <span class="filters all">
                            <label for="filter__">
                            <%= radio_button_tag(:filter, "*", :checked => 'checked') %> All
                            </label>
                        </span>
                        <span class="filters stat_filter">
                            <label for="filter_.status_fil">
                            <%= radio_button_tag(:filter, ".status_fil") %> Statuses
                            </label>
                        </span>
                        <span class="filters media">
                            <label for="filter_.media_fil">
                            <%= radio_button_tag(:filter, ".media_fil") %> Media
                            </label>
                        </span>
                        <span class="filters market">
                            <label for="filter_.market_fil">
                            <%= radio_button_tag(:filter, ".market_fil") %> Market
                            </label>
                        </span>
                        <span class="filters event">
                            <label for="filter_.event_fil">
                            <%= radio_button_tag(:filter, ".event_fil") %> Events
                            </label>
                        </span>
                        <span class="filters project">
                            <label for="filter_.project_fil">
                            <%= radio_button_tag(:filter, ".project_fil") %> Projects
                            </label>
                        </span>
                    </div>
                </div>
            </span>

            <div id="media_query_stream">
                <div class="act_rfrsh">
                    <div class="refresh"><%= link_to '<i class="icon-refresh icon-grey menu_icons"></i> Refresh'.html_safe, :controller => :community, :action => :community, remote: true %></div>
                </div>
            </div>

            <div id="ac_wrap">
                <div id="media_query_stream">
                    <div id="activity_stream_wrap" class="community_stream_wrap">
                       <%= render :partial => "activities/activities", :collection => @activities, :as => :activity %>
                    </div>  
                </div>        

                <%= will_paginate @activities, class: 'display_none' %>

                <% if @activities.total_pages != @activities.current_page %>
                    <div id="p_str_loading"></div>
                    <%= link_to("#", class: "com_show_wrap p_s_load_arrow") do %>
                        <div class="com_show">
                            Show More
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>

        <div class="tab-pane" id="media">
            <span id="community">
                <div id="stream_filters">
                    <div id="community_media_filters" class="form-inline">
                        <span class="filters all">
                            <label for="fil__">
                            <%= radio_button_tag(:fil, "*") %> All
                            </label>
                        </span>
                        <span class="filters photos">
                            <label for="filter_.photo_fil">
                            <%= radio_button_tag(:filter, ".photo_fil") %> Photos
                            </label>
                        </span>
                        <span class="filters audio">
                            <label for="filter_.audio_fil">
                            <%= radio_button_tag(:filter, ".audio_fil") %> Audio
                            </label>
                        </span>
                    </div>
                </div>
            </span>

            <div id="media_query_media">
                <div class="md_rfrsh">
                    <div class="refresh"><%= link_to '<i class="icon-refresh icon-grey menu_icons"></i> Refresh'.html_safe, :controller => :community, :action => :community, remote: true %></div>
                </div>
            </div>

            <div id="md_wrap">
                <div id="media_query_media">
                    <div id="media_list_wrap" class="community_media_wrap">
                        <%= render :partial => "media/media", :collection => @media, :as => :medium %>       
                    </div>  
                </div>    

                <%= will_paginate @media, class: 'display_none' %>

                <% if @media.total_pages != @media.current_page %>
                    <div id="p_med_loading"></div>
                    <%= link_to("#", class: "com_show_wrap p_m_load_arrow") do %>
                        <div class="com_show">
                            Show More
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>