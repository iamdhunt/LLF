<% if @project.votes.size > 0 && current_member.voted_up_on?(@project) %>
  <%= link_to '<i class="fa fa-heart"></i>'.html_safe, favorite_project_path(@project), method: :put, :remote => true, title: "Unfavorite", alt: "Unfavorite", class: "unfav" %>
<% else %>
  <%= link_to '<i class="fa fa-heart"></i>'.html_safe, favorite_project_path(@project), method: :put, :remote => true, title: "Favorite", alt: "Favorite" %>
<% end %>
