<%= simple_form_for [@updateable, @update] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: false, error: false, input_html: { rows: '1', maxlength: '280', class: 'input-xlarge' } %>
    <%= f.input :content, label: false, error: false, input_html: { class: 'input-xlarge' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Upload', :class => "btn btn-warning" %>
  </div>
<% end %>