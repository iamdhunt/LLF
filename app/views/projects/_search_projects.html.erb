<% @results.each do |project| %>
	
	<% if project.category == 'Arts' %>
		<div id="p_list_wrap" class="art_fil">
	<% elsif project.category == 'Entrepreneurial' %>
		<div id="p_list_wrap" class="biz_fil">
	<% elsif project.category == 'Sports' %>
		<div id="p_list_wrap" class="sports_fil">
	<% elsif project.category == 'Music' %>
		<div id="p_list_wrap" class="music_fil">
	<% elsif project.category == 'Other' %>
		<div id="p_list_wrap" class="other_fil">
	<% end %>
		
		<div id="p_list_top">
			<span class="l">
		      <%= avatar_profile_link project.member, :class => "pr_av", title: project.member.full_name, alt: project.member.full_name %>
		      <% if project.category == 'Arts' %>
		        <%= image_tag("/assets/Arts Category.png", class: 'ims', title: 'Arts') %>
		      <% end %>
		      <% if project.category == 'Entrepreneurial' %>
		        <%= image_tag("/assets/Biz Category.png", class: 'ims', title: 'Entrepreneurial') %>
		      <% end %>
		      <% if project.category == 'Sports' %>
		        <%= image_tag("/assets/Sports Category.png", class: 'ims', title: 'Sports') %>
		      <% end %>
		      <% if project.category == 'Music' %>
		        <%= image_tag("/assets/Music Category.png", class: 'ims', title: 'Music') %>
		      <% end %>
		      <% if project.category == 'Other' %>
		        <%= image_tag("/assets/Other Category.png", class: 'ims', title: 'Other') %>
		      <% end %>
		    </span>

		    <span class="r">
		    	<% if member_signed_in? %>
			    	<span id="p_fav_str">
					    <%= render :partial => "fav_button_stream", :locals => {:project => project} %>
					</span>
			        <% if current_member == project.member %>
				        <span class="btn-group">
				          <%= link_to image_tag("/assets/More 2.png", class: 'ims-act', title: 'Options'), "/page.html", :class => "dropdown-toggle", :data => {:toggle => "dropdown", :target=>"#"} %>
				            <ul class="dropdown-menu">            
				              <li>
				                <%= link_to "Edit", edit_project_path(project), class: '' %>
				              </li>
				              <li class="del">
				                <%= link_to "Delete", project, method: :delete, data: { confirm: 'Are you sure?' } %>
				              </li>
				            </ul>
				        </span>
			        <% end %>
		      	<% end %>
		    </span>
		    <div style="clear:both;"></div>
		</div>

		<div class="p-av">
			<%= avatar_project_link project, title: project.title, alt: project.title %>
		</div>

		<div id="pl_middle">
			<div id="pl_info">
				<div class="pl_t">
					<%= link_to project.name, project_path(project) %>
				</div>

				<div class="pl_ts">
					<%= project.marker_list.map { |m| link_to m.titleize, :controller => "projects", :action => "index", :search => m }.join(' ').html_safe %>
				</div>
			</div>

			<div class="pl_bl">
				<%= project.blurb.titleize %>
			</div>
		</div>

		<% if project.city? %>
			<div class="e_loc">
				<%= link_to(:controller => "projects", :action => "index", :search => project.city) do %>
	                <i class="icon-map-marker icon-blue"></i> <%= project.city.titleize %>
	            <% end %>
			</div>
		<% end %>

		<div class="pl_tm">
			<%= project.created_at.strftime("%b %d %Y") %>
		</div>

	</div>

<% end %>