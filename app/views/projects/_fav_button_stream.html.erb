<% if project.votes.size > 0 && current_member.voted_up_on?(project) %>

	<%= link_to favorite_project_path(project), remote: true, method: :put, title: "Unfavorite", alt: "Unfavorite", :class => "" do %>
        <i class="fa fa-heart ims-act fav_e_p unfav"></i>
    <% end %>

<% else %>

	<%= link_to favorite_project_path(project), remote: true, method: :put, title: "Favorite", alt: "Favorite", :class => "" do %>
        <i class="fa fa-heart ims-act fav_e_p"></i>
    <% end %>

<% end %>