<% @updates.each do |update| %>

<div id="update_wrap">
	<div id="u_top">
		<span class="u_tit">
			<%= update.title %>
		</span>
		<% if update.member == current_member %>
			<span class="u_del">
				<%= link_to image_tag("Delete 3.png", title: 'Delete'), [@updateable, update], method: :delete, data: { confirm: 'Are you sure?' } %>
			</span>
		<% end %>
		<span class="u_time">
			<%= update.created_at.strftime("%b %d %Y") %>
		</span>
		<div style="clear:both;"></div>
	</div>

	<div id="u_bottom">
		<%= update.content %>
	</div>
</div>

<% end %>