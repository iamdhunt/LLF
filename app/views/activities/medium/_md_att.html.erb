<% if activity.targetable.asset.content_type =~ /^audio\/(mp3|mpeg|mpeg3|mpg|x-mp3|x-mpeg|x-mpeg3|x-mpegaudio|x-mpg)/ %>
  <div class="act_media_content md_aud_wrap">
  	<% if activity.targetable.cover? %>
      	<div id='med_art_act' style="background-image: url(<%= activity.targetable.cover.url(:large) %>)">
    <% else %>
        <div id='med_art_act' style="background-image: url('/assets/Default-Audio.jpg')">
    <% end %>
          <div id="<%= activity.id %>_<%= activity.targetable.id %>" class="share-body none">
            <input class="pr_in forms" value="<%= medium_url(activity.targetable) %>" onclick="this.select()" />
          </div>

          <div class="med_play_btn">
            <%= link_to '<i class="fa fa-play-circle-o"></i>'.html_safe, activity.targetable.asset.url, class: 'sm2_button', title: 'Play/Pause', alt: 'Play/Pause' %>
          </div>
        </div>
  </div>
<% end %>

<% if activity.targetable.asset.content_type =~ /^image\/(png|gif|jpeg)/ %>
	<div class="act_media_content">
    <div id="<%= activity.id %>_<%= activity.targetable.id %>" class="share-body none">
      <input class="pr_in forms" value="<%= medium_url(activity.targetable) %>" onclick="this.select()" />
    </div>

    <% if activity.targetable.caption? %>
      <%= link_to image_tag(activity.targetable.asset.url, class: 'act_md_i'), activity.targetable.asset.url(:fancy), :data => { :fancybox => '',:caption => Rinku.auto_link(media_with_mentions(activity.targetable)), :tags => %w(a) } %>
    <% else %>
      <%= link_to image_tag(activity.targetable.asset.url, class: 'act_md_i'), activity.targetable.asset.url(:fancy), :data => { :fancybox => '' } %>
    <% end %>
	</div>
<% end %>