<div id="activity_<%= activity.id %>_<%= activity.member.id %>" class="list_act_wrap media_fil">

	<div id="a_top">
		<span class="at_m"><%= link_to 'media', profile_media_path(activity.targetable.member) %></span>
	</div>

	<% if activity.targetable.asset.content_type =~ /^audio\/(mp3|mpeg|mpeg3|mpg|x-mp3|x-mpeg|x-mpeg3|x-mpegaudio|x-mpg)/ %>
      <div class="act_media_content">
      	<% if activity.targetable.cover? %>
          	<div id='med_art_act' style="background-image: url(<%= activity.targetable.cover.url(:activity) %>)">
        <% else %>
	        <div id='med_art_act' style="background-image: url('/assets/Default Audio 1.png')">
	    <% end %>
	          <div class="ui360 ui360-vis">
	            <%= link_to '', activity.targetable.asset.url %>
	          </div>
	        </div>
      </div>
    <% end %>

    <% if activity.targetable.asset.content_type =~ /^image\/(png|gif|jpeg)/ %>
		<div class="act_media_content">
			<%= link_to image_tag(activity.targetable.asset.url(:activity), class: ''), activity.targetable.asset.url(:large), class: 'fancybox' %>
		</div>
	<% end %>

	<% if activity.targetable.caption? %>
		<div class="media_act_cap">
			<%= Rinku.auto_link(media_with_mentions(activity.targetable)).html_safe %>
		</div> 
	<% end %>

	<% if activity.targetable.marker_list %>
      <div class="t_s">
      	<%= activity.targetable.marker_list.map { |m| link_to truncate_tag('+ ' + m), {:controller => "media", :action => "index", :media => m}, title: m, alt: m }.join(' ').html_safe %>
      </div>
    <% end %>

	
		<div id="act_btn_wrap">
			<span id="comment_act_btn">

				<span><%= list_profile_link activity.targetable.member, :class => "pr_av", title: activity.targetable.member.full_name, alt: activity.targetable.member.full_name %></span>

				<% if member_signed_in? %>

					<% if activity.targetable.comments.count > 0 && activity.targetable.comments.count <= 99 %>
						<%= link_to medium_path(activity.targetable), title: "Comment", alt: "Comment", :class => "btn comment" do %>
							<%= image_tag("Comment 3.png", class: "act_actions") %><%= activity.targetable.comments.count %>
						<% end %>
					<% elsif activity.targetable.comments.count > 99 %>
						<%= link_to image_tag("Comment 3.png", class: "act_actions") + '99+', medium_path(activity.targetable), title: "Comment", alt: "Comment", :class => "btn comment" %>
					<% else %>
						<%= link_to image_tag("Comment 3.png", class: "act_actions"), medium_path(activity.targetable), title: "Comment", alt: "Comment", :class => "btn comment" %>
					<% end %>

					<span id="act_fav_<%= activity.id %>_<%= activity.member.id %>">
						<%= render :partial => "activities/favorite", :locals => {:activity => activity} %>	
					</span>

					<% if activity.member == current_member %>
						<span class="ad">
							<%= link_to image_tag("Trash.png",  class: "act_actions"), activity_path(activity), remote: true, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete", alt: "Delete", :class => "btn more" %>
						</span>
					<% end %>

				<% end %>

				<span class="a_t"><span class="m"><%= time_ago_in_words(activity.targetable.created_at) %></span></span>
				
			</span>
		</div>
	

	<div id="share" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="sharemodallabel" aria-hidden="true">
	    <div class="modal-header">
	      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	      <h3 id="sharemodallabel">Copy Project URL</h3>
	    </div>
	    <div class="modal-body pi">
	      <input class="pr_in forms" value="<%= medium_url(activity.targetable) %>" />
	    </div>
	</div>
	
</div>