<div class="list_act_wrap media_fil">

	<div class="act_media_top">
		<span class="">
			<%= avatar_profile_link activity.member, :class => "act_av" %>
		</span>

		<span class="act_name">
			<%= link_to activity.member.user_name, profile_path(activity.member) %> 
		</span>

		<span class="meta"> 
			<%= time_ago_in_words(activity.targetable.created_at) %>
		</span>

		<span class="act_title med">
			uploaded new <%= link_to 'Media', profile_media_path(activity.member) %>
		</span>
	</div>

	<% if activity.targetable.asset.content_type =~ /^audio\/(mp3|mpeg|mpeg3|mpg|x-mp3|x-mpeg|x-mpeg3|x-mpegaudio|x-mpg)/ %>
      <div class="act_media_content">
        <div id='med_art_act' style="background-image: url('/assets/Default Audio 1.png')">
          <div class="ui360 ui360-vis">
            <%= link_to '', activity.targetable.asset.url %>
          </div>
        </div>
      </div>
    <% end %>

    <% if activity.targetable.asset.content_type =~ /^image\/(png|gif|jpeg)/ %>
		<div class="act_media_content">
			<%= link_to image_tag(activity.targetable.asset.url(:activity), class: ''), activity.targetable.asset.url(:large), class: 'fancybox' %>
		</div>
	<% end %>

	<% if activity.targetable.caption? %>
		<div class="media_act_cap">
			<%= Rinku.auto_link(activity.targetable.caption).html_safe %>
		</div> 
	<% end %>

	<div class="actions_act" id="sbox">
		<input class='as forms' value="<%= medium_url(activity.targetable_id) %>" />
	</div>

	<% if member_signed_in? %>
		<div class="actions_act">
			<span id="comment_act_btn">

				<% if activity.targetable.comments.count > 0 && activity.targetable.comments.count <= 99 %>
					<%= link_to medium_path(activity.targetable_id), :class => "btn comment" do %>
						<%= image_tag("Comment 3.png", class: "act_actions", title: "Comment", alt: "Comment") %><%= activity.targetable.comments.count %>
					<% end %>
				<% elsif activity.targetable.comments.count > 99 %>
					<%= link_to image_tag("Comment 3.png", class: "act_actions", title: "Comment", alt: "Comment") + '99+', medium_path(activity.targetable_id), :class => "btn comment" %>
				<% else %>
					<%= link_to image_tag("Comment 3.png", class: "act_actions", title: "Comment", alt: "Comment"), medium_path(activity.targetable_id), :class => "btn comment" %>
				<% end %>

				<% if activity.votes.size > 0 && activity.votes.size <= 99 && current_member.voted_up_on?(activity) %>
					<%= link_to favorite_activity_path(activity), method: :put, :class => "btn favorite" do %>
						  <%= image_tag("Favorite 3.png", class: "act_actions", title: "Unfavorite", alt: "Unfavorite") %><%= activity.votes.size %>
					<% end %>
				<% elsif activity.votes.size > 99 && current_member.voted_up_on?(activity) %>
					<%= link_to image_tag("Favorite 3.png", class: "act_actions", title: "Unfavorite", alt: "Unfavorite") +'99+', favorite_activity_path(activity), method: :put, :class => "btn favorite" %>
				<% elsif activity.votes.size > 0 && activity.votes.size <= 99 %>
					<%= link_to favorite_activity_path(activity), method: :put, :class => "btn favorite" do %>
						  <%= image_tag("Favorite 5.png", class: "act_actions", title: "Favorite", alt: "Favorite") %><%= activity.votes.size %>
					<% end %>
				<% elsif activity.votes.size > 99 %>
					<%= link_to image_tag("Favorite 5.png", class: "act_actions", title: "Favorite", alt: "Favorite") +'99+', favorite_activity_path(activity), method: :put, :class => "btn favorite" %>
				<% else %>
					<%= link_to image_tag("Favorite 5.png", class: "act_actions", title: "Favorite", alt: "Favorite"), favorite_activity_path(activity), method: :put, :class => "btn favorite" %>
				<% end %>

				<%= link_to image_tag("Share 3.png", class: "act_actions", title: "Share", alt: "Share"), "#", :class => "btn share", :id => "ashare" %>

				<% if activity.member == current_member %>
					<span class="btn-group" id="<%= activity.targetable.id %>">
						<%= link_to image_tag("More.png", class: "act_actions", title: "More", alt: "More"), "#", :class => "btn more dropdown-toggle", :data => {:toggle => "dropdown"} %>
						<ul class="dropdown-menu">
							<li class="del">
							    <%= link_to "Delete", activity_path(activity), method: :delete, data: { confirm: 'Are you sure?' } %>
							</li>
						</ul>
					</span>
				<% end %>
			</span>
		</div>
	<% end %>

	

</div>