<% title "LLF | Activity" %>

<div id ="main_wrap">

	<%= link_to 'Post to Stream', profile_path(current_member), :class => 'btn btn-info' %>

	<div id="activity_stream_wrap">		
			<%= render partial: "activities", :collection => @activities, :as => :activity %>
	</div>

	<%= will_paginate @activities, class: 'display_none'%>

	<% if @activities.total_pages != @activities.current_page %>
		<div id="loading"></div>
		<%= link_to("#", class: "com_show_wrap load_arrow") do %>
        	<div class="com_show">
        		Show More
        	</div>
        <% end %>
	<% end %>

</div>



<!--/main_wrap-->