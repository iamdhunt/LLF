	<%= link_to favorite_activity_path(activity), method: :put, :remote => true, :class => "btn favorite" do %>
		  <%= image_tag("Favorite 3.png", class: "act_actions", title: "Unfavorite", alt: "Unfavorite") %><%= activity.votes.size %>
	<% end %>
<% elsif activity.votes.size > 99 && current_member.voted_up_on?(activity) %>
	<%= link_to image_tag("Favorite 3.png", class: "act_actions", title: "Unfavorite", alt: "Unfavorite") +'99+', favorite_activity_path(activity), method: :put, :remote => true, :class => "btn favorite" %>
