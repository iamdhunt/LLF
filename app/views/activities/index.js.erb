$boxes = $('<%= j render("activities/activities") %>')

$('#activity_stream_wrap').append( $boxes ).imagesLoaded( function(){
  $('#activity_stream_wrap').isotope( 'reload');
});
<% if @activities.next_page %>
	$('.pagination').replaceWith('<%= j will_paginate(@activities) %>');
<% else %>
	$('.pagination').remove();
<% end %>
<% sleep 1 %>