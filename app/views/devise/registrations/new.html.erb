                      <select name="dob_year" class="dob_year dob_reg_fields forms" id="dob_year" placeholder="Year" tabindex="9">
                        <option>Year</option>
                      </select>
        </div>
        
        <div class="reg_center">
        	<%= f.email_field :email, :autofocus => true %>
            <input name="" type="text" class="forms reg_forms" id="confirm_email" tabindex="11" placeholder="Confirm Email" />
            <%= f.password_field :password %>
            
        </div>
        
        <div class="reg_right">
        	<input name="" type="text" class="forms reg_forms" id="pursuits" tabindex="13" placeholder="Pursuits" /> 
            <label for="pursuits" class="pursuit_reg_label">Your interests, activities, professions, hobbies... (i.e. Sports, Music, Skydiving, Branding, Pop Art). We use this info to help connect our members. So be as general or specific as you want.</label>
            <%= f.submit "Sign up" %>
        </div>
	 <% end %>


  </div>
 
 <div style="clear:both;"></div> 
       
</div>        
    
