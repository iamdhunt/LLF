             <%= f.input :user_name, label: false, placeholder: 'Username', input_html:{ class: 'forms reg_forms', id: 'username_reg', tabindex: '6'} %>
             <label for="dob_month" class="bday_reg_label" >Birthday</label> <select name="dob_month" id="dob_month" placeholder="Month" tabindex="7" class="dob_month dob_reg_fields forms">
