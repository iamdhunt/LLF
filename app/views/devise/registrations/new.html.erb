                        <option>31</option>
                      </select> 
                      <select name="dob_year" class="dob_year dob_reg_fields forms" id="dob_year" placeholder="Year" tabindex="9">
                        <option>Year</option>
                      </select>
        </div>
        
        <div class="reg_center">
        	<%= f.input :email, label: false, placeholder: 'Email', input_html:{ class: 'forms reg_forms', id: 'email', tabindex: '10'} %>
            <%= f.input :password, label: false, placeholder: 'Password', input_html:{ class: 'forms reg_forms', id: 'confirm_email', tabindex: '11'} %>
            <%= f.input :password_confirmation, label: false, placeholder: 'Confirm Password', input_html:{ class: 'forms reg_forms', id: 'password_reg', tabindex: '12'} %>
            
        </div>
        
        <div class="reg_right">
        	<input name="" type="text" class="forms reg_forms" id="pursuits" tabindex="13" placeholder="Pursuits" /> 
            <label for="pursuits" class="pursuit_reg_label">Your interests, activities, professions, hobbies... (i.e. Sports, Music, Skydiving, Branding, Pop Art). We use this info to help connect our members. So be as general or specific as you want.</label>
            <%= f.submit "Join the Community", :class => 'btn btn-info' %>
        </div>
	 <% end %>


  </div>
 
