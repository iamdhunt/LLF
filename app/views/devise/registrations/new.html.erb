<div id="content_wrap">

    <p><img src="images/LLF 2 Home.png" class="home_image" /></p>
    
</div>

<!--/content_wrap-->

<div id="registration_wrap">
        
        <span class="join reg_title">Join the Community!</span> <span class="free reg_title">(It's free for <strong>&middot;</strong> ev <strong>&middot;</strong> er)</span><br/>
        
  <div class="registration">
	  
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
       	
        <div class="reg_left">
        	
          <%= f.input :first_name, label: false, placeholder: 'First Name', input_html:{ class: 'forms reg_forms', tabindex: '4'} %>
             <%= f.input :last_name, label: false, placeholder: 'Last Name', input_html:{ class: 'forms reg_forms reg_spacer', tabindex: '5'} %>
             <%= f.input :user_name, label: false, placeholder: 'Username', input_html:{ class: 'forms reg_forms', tabindex: '6'} %>
        
        </div>
        
        <div class="reg_center">
        	
          <%= f.input :email, label: false, placeholder: 'Email', input_html:{ class: 'forms reg_forms', tabindex: '10'} %>
            <%= f.input :password, label: false, placeholder: 'Password', input_html:{ class: 'forms reg_forms reg_spacer', tabindex: '11'} %>
            <%= f.input :password_confirmation, label: false, placeholder: 'Confirm Password', input_html:{ class: 'forms reg_forms', tabindex: '12'} %>
            
        </div>
        
        <div class="reg_right">
        	
          <input name="" type="text" class="forms reg_forms" id="pursuits" tabindex="13" placeholder="Favorite Pursuit" /> 
            <label for="pursuits" class="pursuit_reg_label">(i.e. Sports, Music, Skydiving, Branding, Pop Art)</label>
            <%= f.submit "Join the Community", :class => 'btn btn-info btn-large' %>
        
        </div>
	 
   <% end %>


  </div>
 
 <div style="clear:both;"></div> 
       
</div>        
    
<!--/registration-->

