<fieldset>
  <legend class="descriptors leg">Update Your Name</legend>
  <%= f.input :first_name, label: 'First Name', error: false, input_html: { class: 'forms account settings', tabindex: '7', id: 'edit_first', maxlength: '25'} %>
  <%= f.input :last_name, label: 'Last Name', error: false, input_html: { class: 'forms account settings', tabindex: '8', maxlength: '25', id: 'edit_last'} %>
</fieldset>

<fieldset>
  <legend class="leg">Change Your Email</legend>
  <%= f.input :email, error: false, input_html: { class: 'forms account settings'} %>
</fieldset>

<fieldset>
  <legend class="leg">Change Your Password <span class="edit_pass">(Leave blank if you don't want to change your password.)</span> </legend>
  <%= f.input :password, :autocomplete => "off", error: false, input_html: { class: 'forms account settings'} %>
  <%= f.input :password_confirmation, error: false, label: 'Password Confirmation', input_html: { class: 'forms account settings'} %>
</fieldset>


<div class="form-actions">
  <%= f.submit "Update", class: 'btn btn-info pull-left' %>
  <%= link_to "Leave the Community", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger pull-right' %>
</div>