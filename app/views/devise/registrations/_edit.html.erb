<fieldset>
  <legend class="leg">Change Your Username</legend>
  <div class="c_f_labels">
    <span class="custom-labels">* Username</span>
    <div id="custom-input">
        <div class="input-group col-md-12">
            <%= f.input :user_name, label: false,  error: false, input_html: { class: '', tabindex: '1', id: 'edit_username', maxlength: '16', autocomplete: 'off'} %>
        </div>
    </div>
  </div>
  
</fieldset>

<fieldset>
  <legend class="descriptors">Update Your Pursuits</legend>
  <div class="edit_instructions">
    <ul>
      <li>
        &raquo; Enter your top 5 Pursuits, comma separated
      </li>
      <li>
        &raquo; 30 characters per Pursuit, only letters
      </li>
      <li>
        &raquo; i.e. Branding, Graphic Design, Music Production, etc.
      </li>
    </ul>
  </div>
  <div id="custom-select" class="c_f_labels user_edit">
    <span class="custom-labels">Pursuits</span>
    <%= f.input :pursuit_list, label: false, error: false, input_html: { class: 'custom-tags', tabindex: '2', id: 'edit_pursuits', autocomplete: 'off'} %>
  </div> 
</fieldset>

<fieldset>
