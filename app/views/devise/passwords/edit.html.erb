<% title "THE COLLECTIVV &#215; Change Your Password".html_safe %>

<div id="banner" style="background-image: url('/assets/Community Banner Image.jpeg');text-align:left;">

	<div class="login_wrap">
		<div class="login_form">

			<%= form_for(resource, :as => resource_name, :url => password_path, :html => { :method => :put, class: "" }) do |f| %>
			  	<%= devise_error_messages! %>

					<div>
						<%= f.hidden_field :reset_password_token %>
					</div>

					<div style="margin-bottom:8px;">
						<%= f.password_field :password, :autofocus => true,  autocomplete: "off", label: false, placeholder: 'New Password', class: 'forms account sign_in' %>
					</div>

					<div style="margin-bottom:8px;">
						<%= f.password_field :password_confirmation,  autocomplete: "off", label: false, placeholder: 'Confirm New Password', class: 'forms account sign_in' %>
					</div>  

				  	<div><%= f.submit "Change My Password", :class => "btn btn-baby-blue btn-large" %></div>

			<% end %>

			<div class="links">
				<%= render "devise/shared/links" %>
			</div>

		</div>
	</div>

</div>

<div class="" style="padding-bottom:500px;"></div>

<!--/main_wrap-->
