<% title "LLF | Change Your Password" %>

<div class="login_bg">

	<div class="login_wrap">
		<div class="login_form">

			<%= form_for(resource, :as => resource_name, :url => password_path, :html => { :method => :put, class: "" }) do |f| %>
			  	<%= devise_error_messages! %>

					<div>
						<%= f.hidden_field :reset_password_token %>
					</div>

					<div>
						<%= f.password_field :password, :autofocus => true,  autocomplete: "off", label: false, placeholder: 'New Password', class: 'forms account sign_in' %>
					</div>

					<div>
						<%= f.password_field :password_confirmation,  autocomplete: "off", label: false, placeholder: 'Confirm New Password', class: 'forms account sign_in' %>
					</div>  

				  	<div><%= f.submit "Change My Password", :class => "btn btn-info btn-large" %></div>

			<% end %>

			<div class="links">
				<%= render "devise/shared/links" %>
			</div>

		</div>
	</div>

</div>

<!--/main_wrap-->
