<% title "THE COLLECTIVV &#215; Password Reset".html_safe %>

<div id="banner" style="background-image: url('/assets/Community Banner Image.jpeg');text-align:left;">
  	<div class="login_wrap">
		<div class="login_form">

				<%= simple_form_for(resource, :as => resource_name, :url => password_path, :html => { :method => :post, class: "" }) do |f| %>
				  	<%= devise_error_messages! %>

				  	<div class="s_pass">
				  		<div id="custom-input">
			                <div class="input-group col-md-12">
			                    <%= f.input :login, :autofocus => true, label: false, placeholder: 'Username or Email', input_html: { class: 'forms account sign_in'} %>
			                </div>
			            </div>
					</div>

					<div><%= f.button :submit, "Send Reset Instructions", class: 'btn btn-baby-blue btn-large' %></div>

				<% end %>

				<div class="links">
					<%= render "devise/shared/links" %>
				</div>

		</div>
	</div>
</div>

<div class="" style="padding-bottom:500px;"></div>

<!--/main_wrap-->
