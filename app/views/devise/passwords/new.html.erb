<% title "LLF | Password Reset" %>

<div id="main_wrap">

	<div id="signin_wrap">

		<div class="row">
			<div class="span4 signin_box">

				<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "well" }) do |f| %>
				  <%= devise_error_messages! %>
					  
					<fieldset class="fieldset">

						<legend class="legend">Forgot your password?</legend>

					  <%= f.input :email, :autofocus => true, input_html: { class: 'forms account sign_in'} %>

					  <div><%= f.button :submit, "Send Reset Instructions", class: 'btn btn-info' %></div>


					</fieldset> 

				<% end %>

				<%= render "devise/shared/links" %>
			</div>

			<div class="span8">
			</div>
		</div>
	<div style="clear: both;"></div>
	</div>

<!--/activity_wrap-->

</div>

<!--/main_wrap-->