<div id="main_wrap">

	<div id="signin_wrap">

		<div class="row">
			<div class="span4 signin_box">

				<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "well" }) do |f| %>
					  
					<fieldset class="fieldset">

						<legend class="legend">Welcome Back!</legend>

					  <%= f.input :email, :autofocus => true, input_html: { class: 'forms account sign_in'} %>
					  <%= f.input :password, input_html: { class: 'forms account sign_in'} %>

					  <% if devise_mapping.rememberable? -%>
					    <div><%= f.input :remember_me, as: :boolean, label: 'Remember Me' %></div><br />
					  <% end -%>

					  <div><%= f.button :submit, "Sign In", :class => "btn-info" %></div><br />

					</fieldset> 

				<% end %>

				<%= render "devise/shared/links" %>
			</div>

			<div class="span8">
			</div>
		</div>
	<div style="clear: both;"></div>
	</div>

<!--/activity_wrap-->

</div>

<!--/main_wrap-->