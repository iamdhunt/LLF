<% title "LLF | Login" %>

<div class="login_bg">

	<div class="login_wrap">
		<div class="login_form">

				<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "" }) do |f| %>

						<div>
					  		<%= f.input :email, label: false, hint: false, error: false, :autofocus => true, placeholder: 'Email', input_html: { class: 'forms'} %>
						</div>

						<div>
					  		<%= f.input :password, label: false, hint: false, error: false, placeholder: 'Password', input_html: { class: 'forms'} %>
						</div>

					 	<% if devise_mapping.rememberable? -%>
						  	<label for="member_remember_me">
						    	<div><%= f.input :remember_me, as: :boolean, label: 'Remember Me', input_html:{ :checked => 'checked', value: '1' } %></div>
							</label>
					  	<% end -%>

					  <div><%= f.button :submit, "Login", :class => "btn btn-info btn-large" %></div> 

				<% end %>

				<%= render "devise/shared/links" %>

		</div>
	</div>

</div>

<!--/main_wrap-->