<% title "LLF x Market" %>

<%= render :partial => "banner" %>

<div id="lstgs_wrap">

    <div id="sb_wrap" class="q_bc mk1">
        <div id="bc_wrap">
            <div class="breadcrumbs">
                <span>Market</span> &raquo; <span class="lstgs"><%= link_to "Listings", listings_path %></span>
            </div>

            <% if member_signed_in? %>
                <div class="add_lst" style="padding-top:6px;">
                  <%= link_to new_listing_path, title: 'Create Listing', alt: 'Create Listing', style: 'vertical-align:sub;' do %>
                    <i class="fa fa-plus"></i>Create Listing
                  <% end %>
                </div>
            <% end %>

            <% if member_signed_in? %>
              <%= render :partial => "listings/search" %>
            <% else %>
              <span class="l_o"><%= render :partial => "listings/search" %></span>
            <% end %>
        </div>

    </div>

    <div id="mk_wrap">

        <div id="mk_head" >
            <div>
                <span class="h pl">
                    <%= link_to(popular_listings_path, class: "") do %>
                        POPULAR
                    <% end %>       
                </span>
                <span class="pl_l v_a">
                    <%= link_to(popular_listings_path, class: "") do %>
                        View more
                    <% end %>
                </span>
            </div>
        </div>

        <div id="li_index">
            <div id="pop_lstgs">
                <%= render partial: 'listings/pop_listings' %>
            </div>
        </div>

        <div id="mk_head" class="mk_2">
            <div>
                <span class="h mk">
                    <%= link_to(listings_path, class: "") do %>
                        MARKET
                    <% end %>
                </span>
                <span class="mk_l v_a">
                    <%= link_to(listings_path, class: "") do %>
                        View more
                    <% end %>
                </span>
            </div>
        </div>

        <div id="li_index">
            <div id="lstgs" class="">
                <%= render partial: 'listings/listings' %>
            </div>
        </div>

    </div>

</div>