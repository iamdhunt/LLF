<%= simple_form_for :message, url: [:reply_conversation], :html => { :id => 'reply_form' }, remote: true do |f| %>

	<%= f.input :body, as: :text, error: false, label: false, placeholder: 'Reply to conversation...', input_html: { class: 'auto txt_a_size', id: 'cv_form', rows: '1', autocomplete: 'off', style: 'margin-bottom:5px;' } %>

	<span id="spinner" class="spinner">
		<%= image_tag '/assets/ajax-loader-(6).GIF', id: 'img-spinner', alt: 'Loading' %>
	</span>
			
	<%= f.submit "Reply", class: 'btn btn-green' %>

<% end %>