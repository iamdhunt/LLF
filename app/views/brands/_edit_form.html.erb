<%= simple_form_for(@brand, :html => { class: 'form-horizontal ' }) do |f| %>
  <%= f.error_notification %>

  	<div class="rq">
    	* = required field
  	</div>

  	<div class="tab-content">
      	<div id="name" class="tab-pane active">
		 	<fieldset>
		      	<legend class="leg">Name Your Brand</legend>
		      	<%= f.input :name, label: 'Name', error: false, input_html: { class: 'forms t_in', id: 'b_cap_nam', cols: '55', rows: '1', tabindex: '1', maxlength: '40'} %>
		      	<div class="p_tit_ct"><span class="b_ct_nam"></span> <span class="p_ct_text">characters remaining</span></div>
		    </fieldset>
		</div>

	    <div id="images" class="tab-pane">
		    <fieldset>
		     	<legend class="descriptors">Upload Some Images</legend>
		      	<div class="edit_instructions">
		        	<ul>
		          		<li>
		            		&raquo; Recommended logo dimensions of 200x200
		          		</li>
		          		<li>
		            		&raquo; Recommended banner dimensions of 1400x200
		          		</li>
		          		<li>
		            		&raquo; Maximum file size of 10MB
		          		</li>
		          		<li>
		            		&raquo; Accepted file formats: (jpeg, png, gif)
		          		</li>
		        	</ul>
		      	</div>
		      	<%= f.input :logo, as: :file, label: 'Logo', error: false, input_html: { class: 'account pr_upload'} %>
		      	<div class="edit_av_f">
				    <% if f.object.logo? %>
				      <%= image_tag f.object.logo.url(:av) %>
				    <% end %>
				</div>
		      	<%= f.input :banner, as: :file, label: 'Banner', error: false, input_html: { class: 'account pr_upload'} %>
		      	<div class="edit_av_f">
				    <% if f.object.banner? %>
				      <%= image_tag f.object.banner.url(:preview) %>
				    <% end %>
				</div>
		    </fieldset>
		</div>

		<div id="basics" class="tab-pane">
			<fieldset>
		      	<legend class="descriptors">Provide Some Tags</legend>
		      	<div class="edit_instructions">
		        	<ul>
		          		<li>
		            		&raquo; How would you categorize your brand?
		          		</li>
		          		<li>
		            		&raquo; Provide up to three of the most relevant tags
		          		</li>
		          		<li>
		            		&raquo; Comma separated, 15 characters per
		          		</li>
		        	</ul>
		      	</div>
		      	<%= f.input :marker_list, label: 'Tags', error: false, input_html: { cols: '55', rows: '1', class: 'forms account settings', tabindex: '2'} %>
		    </fieldset>

		    <fieldset>
		      	<legend class="descriptors">Tell Us the Story</legend>
		      	<div class="edit_instructions">
		        	<ul>
		          		<li>
		           	 		&raquo; Let the world know what's so awesome about your brand (Required)
		          		</li>
		        	</ul>
		      	</div>
		      	<%= f.input :description, label: false, error: false, placeholder: 'Give us the short version...', input_html: { cols: '52', rows: '1', class: 'forms bl_in', id: 'p_cap_blb', tabindex: '6', maxlength: '140' } %>
            	<div class="p_blb_ct"><span class="p_ct_blb">140</span> <span class="p_ct_text">characters remaining</span></div>
		    </fieldset>
		</div>

		<div class="form-actions">
	    	<%= f.button :submit, class: 'btn btn-market' %>
	    	<%= link_to 'Back', @brand, class: 'btn btn-info pull-right' %>
	    </div>
	</div>

<% end %>
