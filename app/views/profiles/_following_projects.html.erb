<% @following.each do |follow| %>

<div id="p_list_wrap">

		<div id="p_list_top">
			<span class="l">
		      <%= avatar_profile_link follow.member, :class => "pr_av" %>
		      <% if follow.category == 'Arts' %>
		        <%= image_tag("/assets/Arts Category.png", class: 'ims', title: 'Arts') %>
		      <% end %>
		      <% if follow.category == 'Entrepreneurial' %>
		        <%= image_tag("/assets/Biz Category.png", class: 'ims', title: 'Entrepreneurial') %>
		      <% end %>
		      <% if follow.category == 'Sports' %>
		        <%= image_tag("/assets/Sports Category.png", class: 'ims', title: 'Sports') %>
		      <% end %>
		      <% if follow.category == 'Music' %>
		        <%= image_tag("/assets/Music Category.png", class: 'ims', title: 'Music') %>
		      <% end %>
		      <% if follow.category == 'Other' %>
		        <%= image_tag("/assets/Other Category.png", class: 'ims', title: 'Other') %>
		      <% end %>
		    </span>

		    <span class="r">
		    	<% if member_signed_in? %>
			    	<span id="p_fav_str">
					    <%= render :partial => "fav_button_projects", :locals => {:project => follow} %>
					</span>
			        <% if current_member == follow.member %>
				        <span class="btn-group">
				          <%= link_to image_tag("/assets/More 2.png", class: 'ims-act', title: 'Options'), "/page.html", :class => "dropdown-toggle", :data => {:toggle => "dropdown", :target=>"#"} %>
				            <ul class="dropdown-menu">            
				              <li>
				                <%= link_to "Edit", edit_project_path(follow), class: '' %>
				              </li>
				              <li class="del">
				                <%= link_to "Delete", follow, method: :delete, data: { confirm: 'Are you sure?' } %>
				              </li>
				            </ul>
				        </span>
			        <% end %>
		        <% end %>
		    </span>
		    <div style="clear:both;"></div>
		</div>

		<div class="p-av">
			<%= avatar_project_link follow, class: '' %>
		</div>

		<div id="pl_info">
			<div class="pl_t">
				<%= link_to follow.title, project_path(follow) %>
			</div>

			<div class="pl_ts">
				<%= follow.tag_list.map { |t| link_to t.titleize, "#" }.join(' ').html_safe %>
			</div>
		</div>

		<div class="pl_bl">
			<%= follow.blurb %>
		</div>

	</div>

<% end %>