<% title @member.full_name + " | Following" %>

<div id="follow_title">
	<div class="label-info">
		Following
	</div>
</div>

<div id="follow_list_wrap">
	<%= render :partial => "following" %>       
</div>

<%= will_paginate @following, class: 'display_none' %>

<% if @following.total_pages != @following.current_page %>
    <div id="loading"></div>
    <div class="load_more">
        <%= link_to "Show More", "#", class: 'btn btn-info load_arrow' %>
    </div>
<% end %>