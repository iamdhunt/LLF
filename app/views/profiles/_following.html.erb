<% @following.each do |follow| %>

	<div class="follow_item_wrap">

		<div class="avatar">
			<%= follow_profile_link follow %>
		</div> 

		<div class="bottom">
			<div class="name">
				<%= follow.full_name %>
			</div> 

			<div class="username">
				<%= "@" + follow.user_name %>
			</div> 

			<div class="pursuits">
				<%= follow.pursuit_list.map { |p| link_to p.titleize, "#" }.join(', ').html_safe %>
			</div> 
		</div>

	</div>

<% end %>