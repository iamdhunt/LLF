<% @listings.each do |listing| %>
	<div id="pdl_wrap">
		<div id="">
			<div class="pdl_img">
				<% if listing.feature.content_type =~ /^image\/(png|gif|jpeg)/ %>
					<%= link_to image_tag(listing.feature.url(:index)), listing_path(listing), title: listing.title, alt: listing.title %>
				<% end %>
			</div>
		</div>

		<div id="pdl_info">
			<div id="pdl_t">
				<div class="pdl_title">
					<%= link_to listing.title, listing_path(listing) %>
				</div>
			</div>

			<div id="pdl_m">
				<div class="pdl_action">
					<%= list_profile_link listing.member, :class => "pr_av", title: listing.member.full_name, alt: listing.member.full_name %>
					<% if member_signed_in? %>
				    	<span id="p_fav_str">
						    <%= render :partial => "fav_button_listings", :locals => {:listing => listing} %>
						</span>
						<%= link_to image_tag("Share.png", class: "ims-act", title: "Share", alt: "Share"), "#" %>
				        <% if current_member == listing.member %>
					        <span class="btn-group">
					          <%= link_to image_tag("/assets/More 2.png", class: 'ims-act', title: 'Options'), "/page.html", :class => "dropdown-toggle", :data => {:toggle => "dropdown", :target=>"#"} %>
					            <ul class="dropdown-menu">            
					              <li>
					                <%= link_to "Edit", edit_listing_path(listing), class: '' %>
					              </li>
					              <li class="del">
					                <%= link_to "Delete", listing, method: :delete, data: { confirm: 'Are you sure?' } %>
					              </li>
					            </ul>
					        </span>
				        <% end %>
			      	<% end %>
				</div>

				<div class="pdl_price">
					<% if listing.price == 0 %>
			            Free
			         <% else %>
			            <%= number_to_currency(listing.price) %>
			         <% end %>
				</div>
				<div style="clear:both;"></div>
			</div>

			<div id="pdl_b">
				<div class="pdl_mks">
					<%= listing.marker_list.map { |m| link_to m.titleize, :controller => "listings", :action => "index", :search => m }.join(' ').html_safe %>
				</div>
			</div>
		</div>

	</div>
<% end %>