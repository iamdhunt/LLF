<div id="activity_wrap">

	<% if @statuses %>
		<% @statuses.each do |status| %>
			<div class="status">
				<h3><%= status.member.user_name %></h3>
				<%= status.content %>
				<div class="meta">
			    	<p><%= link_to time_ago_in_words(status.created_at) + " ago", status %></p>
			    </div>
			    <span class="ad_item">
				    <%= link_to 'Edit', edit_status_path(status) %> |
				    <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
				</span>
			</div>
		<% end %> 
	<% end %>

<div style="clear: both;"></div>
