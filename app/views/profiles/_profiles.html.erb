<% if @member %>
<div id="main_wrap">

    <div id="profile_wrap">
    	<div id="left_profile">
        	<%= avatar_profile @member %>
            <% if @member == current_member %>
                <div class="change_av">
                    <div>
                        <%= link_to "Change Avatar", edit_member_path %>
                    </div> 
                </div> 
            <% end %>
        </div>
        
        <div id="center_profile">
        	<div class="profile_name"><%= @member.full_name %></div>
            <div class="profile_username"><%= "@" + @member.user_name %></div>
            <div class="follow_count">
                <span class="following_count">
                    <%= link_to @member.following_by_type_count('Member'), profile_following_path(@member) %>
                </span> 
                <span class="follower_count" id="follows_count">
                    <%= link_to @member.followers_by_type_count('Member'), profile_followers_path(@member) %>
                </span>
            </div>
            <div class="follow_count_text">
                <span class="following_text"><%= link_to "Following", profile_following_path(@member) %></span> 
                <span class="follower_text"><%= link_to "Followers", profile_followers_path(@member) %></span>
            </div>
            <% if signed_in? %>
                <div id="member_actions" class="profile_buttons">
                    <%= render :partial => "follows/follow_member", :locals => {:member => @member} %>
                </div>
            <% end %>
            <div class="profile_bio">
                <% if @member.bio %>
                    <%= @member.bio %>
                <% end %>
            </div>
        </div>
        
        <div id="right_profile">
        	<div class="profile_accounts">
            	<div class="top_profile_accounts">
                	<a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                </div>
                <div class="bottom_profile_accounts">
                	<a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                </div>
            </div>
        	<div class="profile_pursuits">
                <% if @member.pursuits %>
                    <%= @member.pursuit_list.map { |p| link_to p.titleize, "#" }.join(', ').html_safe %>
                <% end %>
            </div>        
            <div class="profile_location">
                <% if @member.city %>
                    <%= link_to @member.city, "#" %>
                <% end %>
                <% if @member.state %>
                    <%= link_to @member.state, "#" %>
                <% end %>
                <% if @member.country %>
                    <%= link_to @member.country, "#" %>
                <% end %>
            </div>
        </div>
       <div style="clear:both;"></div>      
    </div>
     
      
    <!--/content_wrap-->

    <div id="profile_nav_wrap">
            <ul class="profile_nav">
                <li>
                	<%= link_to 'Stream', profile_stream_path(@member), class: 'stream_wrap' %>           
                </li> 

                <li>
                    <%= link_to 'Media', profile_media_path(@member), class: 'media_wrap' %>
                </li>
                
                <li>
                	<a href="/members/events.html" class="events_wrap">Events</a>
                </li>
                
                <li>
                	<a href="/members/projects.html" class="projects_wrap">Projects</a>
                </li>
            </ul>
        
    <div style="clear:both;"></div> 
    </div>

    <!--/profile_nav-->

    <%= yield %>

</div>
<% else %>
 <%= render :partial => "no_user" %>
<% end %>