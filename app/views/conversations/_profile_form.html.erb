<%= simple_form_for :conversation, url: :conversations, :html => { :id => 'conv_form' }, remote: true do |f| %>

	<div id="new_conv_wrap">

		<div class="conv_in">

			<div class="conv_fl">Usernames</div>

			<div class="conv_instructions">
				<ul>
					<li>&raquo;Seperate usernames by commas</li>
					<li>&raquo;14 members max</li>
				</ul>
			</div>

			<div class="c_f_labels">
		      <div id="custom-input">
		          <div class="input-group col-md-12 single_row">
		              <%= f.input :recipients, error: false, label: false, input_html: { class: 'forms', id: 'cv_form', value: "#{@member.user_name}", rows: '1', autocomplete: 'off' } %>
		          </div>
		      </div>
		    </div>
		  	
		</div>

		<div class="conv_in">
			<div class="conv_fl">Subject</div>
			<div class="c_f_labels">
		      <div id="custom-input">
		          <div class="input-group col-md-12 single_row">
		              <%= f.input :subject, error: false, label: false, input_html: { class: 'forms', id: 'cv_form', rows: '1', maxlength: '100', autocomplete: 'off' }, placeholder: 'What do you want to talk about?' %>
		          </div>
		      </div>
		    </div>
		</div>

		<div class="">
			<div class="conv_fl">Message</div>
			<%= f.input :body, as: :text, error: false, label: false, input_html: { class: 'auto txt_a_size', id: 'cv_form', rows: '1', autocomplete: 'off' }, placeholder: 'What\'s the message?' %>
		</div>

	    <div class="">
	    	<span id="spinner" class="spinner">
				<%= image_tag '/assets/ajax-loader-(6).GIF', id: 'img-spinner', alt: 'Loading' %>
			</span>
	    	<%= f.submit "Start Conversation", class: 'btn btn-success' %>
	    </div>

	</div>

<% end %>