<% if @listing.errors.any? %>
  <div id="err_wrap">
    <div class="alert alert-error">
      Please review the problems below:
    </div>

    <div id="error_list">
      <ul>
        <% @listing.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>