<% title @listing.title %>

  <% if @listing.member.banner? %>
    <div id="banner" style="background-image: url(<%= @listing.member.banner.url(:large) %>)"></div>
  <% else %>
    <div id="banner" style="background-image: url('/assets/Market Banner.png');"></div>
  <% end %>

  <div id="main_wrap">

    <div id="pd_top">

      <div class="pd_cat">
        <%= link_to @listing.category, :controller => "listings", :action => "index", :search => @listing.category %>
      </div>

      <div class="pd_mk">
        <%= @listing.marker_list.map { |m| link_to m.titleize, :controller => "listings", :action => "index", :search => m }.join(' ').html_safe %>
      </div>

    </div>

    <div id="pd_wrap">

      <div class="pd_left">
        <div class="feature">
          <%= image_tag @listing.feature.url(:feature) %>
        </div>
      </div>

      <div class="pd_right">
        <div class="title">
          <%= @listing.title %>
        </div>

        <div class="action">
          <%= list_av @listing.member, :class => "pr_av", title: @listing.member.full_name, alt: @listing.member.full_name  %>
          <span id="p_fav_but">
            <%= render :partial => "fav_button", :locals => {:listing => @listing} %>
          </span>
          <%= link_to image_tag("/assets/Share.png", class: 'ims sh', title: 'Share'), "#share", :data => {:toggle => "modal"} %>
          <% if current_member == @listing.member %>
            <span class="btn-group">
              <%= link_to image_tag("/assets/More 2.png", class: 'ims m', title: 'Options'), "/page.html", :class => "dropdown-toggle", :data => {:toggle => "dropdown", :target=>"#"} %>
                <ul class="dropdown-menu">            
                  <li>
                    <%= link_to "Edit", edit_listing_path(@listing), class: '' %>
                  </li>
                  <li class="del">
                    <%= link_to "Delete", @listing, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </li>
                </ul>
            </span>
          <% end %>
        </div>

        <div class="price">
          <%= number_to_currency(@listing.price) %>
        </div>

        <div class="cta">
          <%= link_to "Buy Now", @listing.link, class: 'btn btn-large btn-buy' %>
        </div>

        <div>
          <%= @listing.description %>
        </div>
      </div>

      <div style="clear:both;"></div>

    </div>

    <div id="pd_c_wrap">

      <div id="">
        <% if member_signed_in? %>
          <%= render "shared/comment_form" %>
        <% else %>
            <div class="c_message">Must be logged in to leave a comment.</div>
        <% end %>
        <div id="comments_wrap">
          <%= render "shared/comments" %>
        </div>

        <%= will_paginate @comments, class: 'display_none' %>

          <% if @comments.total_pages != @comments.current_page %>
            <div id="loading"></div>  
                <%= link_to("#", class: "com_show_wrap load_arrow") do %>
                  <div class="com_show">
                    Show More
                  </div>
                <% end %>
          <% end %>
      </div>

    </div>

  </div>

  <div class="s_modal">
    <div id="share" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="sharemodallabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="sharemodallabel">Copy Listing URL</h3>
      </div>
      <div class="modal-body pi">
        <input class="pr_in forms" value="<%= listing_url %>" />
      </div>
    </div>
  </div>
