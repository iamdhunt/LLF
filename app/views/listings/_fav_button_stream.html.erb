<% if listing.votes.size > 0 && current_member.voted_up_on?(listing) %>

	<%= link_to favorite_listing_path(listing), remote: true, method: :put, title: "Unfavorite", alt: "Unfavorite", :class => "" do %>
        <i class="fa fa-heart ims-act fav_l unfav"></i>
    <% end %>

<% else %>

	<%= link_to favorite_listing_path(listing), remote: true, method: :put, title: "Favorite", alt: "Favorite", :class => "" do %>
        <i class="fa fa-heart ims-act fav_l"></i>
    <% end %>

<% end %>