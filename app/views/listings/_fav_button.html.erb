<% if @listing.votes.size > 0 && current_member.voted_up_on?(@listing) %>
  <%= link_to '<i class="fa fa-heart"></i>'.html_safe, favorite_listing_path(@listing), method: :put, :remote => true, title: "Unfavorite", alt: "Unfavorite", class: "unfav" %>
<% else %>
  <%= link_to '<i class="fa fa-heart"></i>'.html_safe, favorite_listing_path(@listing), method: :put, :remote => true, title: "Favorite", alt: "Favorite" %>
<% end %>