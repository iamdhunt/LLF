<% if current_member.following?(member) %>
	
    <%= link_to "<i class='fa fa-check'></i>Following".html_safe, member_follow_path(member.to_param, current_member.get_follow(member).id), :method => :delete, :remote => true, title: "Unfollow", alt: "Unfollow", :class => "btn btn-follow" %>

<% else %>

    <%= link_to "<i class='fa fa-plus'></i>Follow".html_safe, member_follows_path(member.to_param), :method => :post, :remote => true, title: "Follow", alt: "Follow", :class => "btn btn-default btn_gl_fol" %>

<% end %>