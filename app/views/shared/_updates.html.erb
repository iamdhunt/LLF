<div id="update_<%= update.updateable.id %>_<%= update.id %>" class="update_wrap">
	<div id="u_top">
		<div class="u_tit">
			<%= update.title %>
		</div>
		<% if member_signed_in? %>
			<% if update.member == current_member %>
				<span class="u_del">
			        <div class="md_drpdw">
			          <%= render :partial => "updates/dropdown_toggle", :locals => {:update => update} %>
			        </div>
				</span>
			<% end %>
		<% end %>
		<div style="clear:both;"></div>
	</div>
	<div class="u_time">
		<%= update.created_at.strftime("%b %d %Y") %>
	</div>

	<div id="u_bottom">
		<%= raw Rinku.auto_link(updates_with_mentions(update)) %>
	</div>
</div>
