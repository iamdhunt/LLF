

<% if upload.asset.content_type =~ /^audio\/(mp3|mpeg|mpeg3|mpg|x-mp3|x-mpeg|x-mpeg3|x-mpegaudio|x-mpg)/ %>
  <div id="upload_<%= upload.uploadable.id %>_<%= upload.id %>" class="list_act_wrap audio_fil">
  <% end %>

<% if upload.asset.content_type =~ /^image\/(png|gif|jpeg)/ %>
  <div id="upload_<%= upload.uploadable.id %>_<%= upload.id %>" class="list_act_wrap photo_fil">
<% end %>

     <% if upload.asset.content_type =~ /^audio\/(mp3|mpeg|mpeg3|mpg|x-mp3|x-mpeg|x-mpeg3|x-mpegaudio|x-mpg)/ %>
        <div class="act_media_content">
          <% if upload.member == current_member %>
            <span class="shu_e">
              <%= link_to image_tag('Edit 5.png'), polymorphic_url([@uploadable, upload], action: :edit), :title => "Edit", :alt => "Edit", class: '' %>
            </span>
            <span class="shu_d">
              <%= link_to image_tag('Delete 2.png'), [@uploadable, upload], remote: true, method: :delete, data: { confirm: 'Are you sure?' }, :title => "Delete", :alt => "Delete" %>
            </span>
          <% end %>

        <% if upload.cover? %>
          <div id='med_art' style="background-image: url(<%= upload.cover.url(:media) %>)">
        <% else %>
          <div id='med_art' style="background-image: url('/assets/Default Audio 1.png')">
        <% end %>
          <div class="ui360 ui360-vis">
            <%= link_to '', upload.asset.url %>
          </div>
        </div>
      </div>
    <% end %>

    <% if upload.asset.content_type =~ /^image\/(png|gif|jpeg)/ %>
      <div class="act_media_content">
        <% if upload.member == current_member %>
          <span class="shu_e">
            <%= link_to image_tag('Edit 5.png'), polymorphic_url([@uploadable, upload], action: :edit), :title => "Edit", :alt => "Edit", class: '' %>
          </span>
          <span class="shu_d">
            <%= link_to image_tag('Delete 2.png'), [@uploadable, upload], remote: true, method: :delete, data: { confirm: 'Are you sure?' }, :title => "Delete", :alt => "Delete" %>
