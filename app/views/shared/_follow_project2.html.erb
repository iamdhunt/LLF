<% if current_member.following?(project) %>
	
	<%= link_to project_follow_path(project.id, current_member.get_follow(project).id), :method => :delete, :remote => true, title: "Unfollow", alt: "Unfollow", :class => "" do %>
        <i class="fa fa-check ims-act unfollow_e_p"></i>
    <% end %>

  <% else %>

  	<%= link_to project_follows_path(project.id), :method => :post, :remote => true, title: "Follow", alt: "Follow", :class => "" do %>
        <i class="fa fa-plus-circle ims-act follow_e_p"></i>
    <% end %>

<% end %>