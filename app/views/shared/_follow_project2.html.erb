<% if current_member.following?(project) %>
     <%= link_to image_tag("Follow E-P 4.png", class: "ims-act"), project_follow_path(project.id, current_member.get_follow(project).id), :method => :delete, :remote => true, title: "Unfollow", alt: "Unfollow", :class => "" %>
  <% else %>
      <%= link_to image_tag("Follow E-P 3.png", class: "ims-act"), project_follows_path(project.id), :method => :post, :remote => true, title: "Follow", alt: "Follow", :class => "" %>
<% end %>