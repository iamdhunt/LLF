<% if current_member.following?(member) %>

      <%= link_to image_tag("Following.png", class: "mem_actions"), member_follow_path(member.to_param, current_member.get_follow(member).id), :method => :delete, :remote => true, title: "Unfollow", alt: "Unfollow", :class => "btn btn-follow" %>

<% else %>

      <%= link_to image_tag("Follow.png", class: "mem_actions"), member_follows_path(member.to_param), :method => :post, :remote => true, title: "Follow", alt: "Follow", :class => "btn" %>
      
<% end %>