<% unless current_member == member %>

  <% if current_member.following?(member) %>

    <div class="btn-group">
        <%= link_to('Following <i class="icon-ok icon-white"></i>'.html_safe, member_follow_path(member.to_param, current_member.get_follow(member).id), :method => :delete, :remote => true, :class => "btn btn-follow") %>
        <%= link_to "Message", "#", :class => "btn" %>
        <%= link_to "Mention", "#", :class => "btn" %>
     </div>


    <% else %>

      <div class="btn-group">
        <%= link_to("Follow", member_follows_path(member.to_param), :method => :post, :remote => true, :class => "btn") %>
        <%= link_to "Mention", "#", :class => "btn" %>
      </div>

  <% end %>

<% end %>