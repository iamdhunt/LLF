<% if current_member.following?(event) %>

	<%= link_to event_follow_path(event.id, current_member.get_follow(event).id), :method => :delete, :remote => true, title: "Unfollow", alt: "Unfollow", :class => "" do %>
        <i class="fa fa-check ims-act unfollow_e_p"></i>
    <% end %>

<% else %>

	<%= link_to event_follows_path(event.id), :method => :post, :remote => true, title: "Follow", alt: "Follow", :class => "" do %>
        <i class="fa fa-plus-circle ims-act follow_e_p"></i>
    <% end %>

<% end %>