<% if current_member.following?(event) %>
      <%= link_to(image_tag("Follow E-P 4.png", class: "ims-act", title: "Unfollow", alt: "Unfollow"), event_follow_path(event.id, current_member.get_follow(event).id), :method => :delete, :remote => true, :class => "") %>
  <% else %>
      <%= link_to(image_tag("Follow E-P 3.png", class: "ims-act", title: "Follow", alt: "Follow"), event_follows_path(event.id), :method => :post, :remote => true, :class => "") %>
<% end %>