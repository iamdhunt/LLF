<%= simple_form_for(@event, :html => { class: 'form-horizontal ' }) do |f| %>
  <% if @event.errors.any? %>
    <%= f.error_notification %>

    <div id="error_list">
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="rq">
    * = required field
  </div>

  <div class="tab-content">
    <div id="basics" class="tab-pane active">
      <fieldset>
        <legend class="leg">Name Your Event</legend>
        <%= f.input :name, label: 'Name', error: false, input_html: { class: 'forms settings t_in', id: '', cols: '55', rows: '1', tabindex: '1', maxlength: '100', autocomplete: 'off'} %>
      </fieldset>

      <fieldset>
        <legend class="descriptors">Choose Your Category & Tags</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Select the appropriate category for your event
            </li>
            <li>
              &raquo; Provide up to three of the event's most relevant tags
            </li>
            <li>
              &raquo; Comma separated, 15 characters per
            </li>
          </ul>
        </div>
        <%= f.input :category, collection: ['Arts', 'Entrepreneurial', 'Music', 'Sports', 'Other'], label: 'Category', error: false, input_html: { class: 'forms account settings', tabindex: '2' } %>
        <%= f.input :marker_list, label: 'Tags', error: false, input_html: { cols: '55', rows: '1', class: 'forms account settings', tabindex: '3', autocomplete: 'off'} %>
      </fieldset>

      <fieldset>
        <legend class="descriptors">Provide Some Links</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Paste or type the full url's (i.e. http://beboldbefearless.co/)
            </li>
            <li>
              &raquo; We only support YouTube/Vimeo
            </li>
            <li>
              &raquo; Include the http://
            </li>
          </ul>
        </div>
        <%= f.input :website, as: :url, label: 'Website', error: false, input_html: { cols: '55', rows: '1', class: 'forms account settings w_in', tabindex: '4', autocomplete: 'off' }, placeholder: 'http://' %>
        <%= f.input :video, as: :url, label: 'Video URL', error: false, input_html: { cols: '55', rows: '1', class: 'forms account settings vid_in', tabindex: '5', autocomplete: 'off' }, placeholder: 'http://' %>
      </fieldset>
    </div>

    <div id="images" class="tab-pane">
      <fieldset>
        <legend class="descriptors">Upload Some Images</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Recommended avatar dimensions of 200x200
            </li>
            <li>
              &raquo; Recommended banner dimensions of 1400x200
            </li>
            <li>
              &raquo; Maximum file size of 10MB
            </li>
            <li>
              &raquo; Accepted file formats: (jpeg, png, gif)
            </li>
          </ul>
        </div>
        <%= f.input :avatar, as: :file, label: 'Avatar', error: false, input_html: { class: 'account pr_upload'} %>
        <%= f.input :banner, as: :file, label: 'Banner', error: false, input_html: { class: 'account pr_upload'} %>
      </fieldset>
    </div>

    <div id="when" class="tab-pane">
      <fieldset>
        <legend class="descriptors">When should we show up?</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; 12am to 12am represents an all day event
            </li>
          </ul>
        </div>
        <%= f.input :start_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 10,  order: [:month, :day, :year], label: 'Start Date', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings', tabindex: '6', maxlength: '50' } %>
        <%= f.input :end_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 10, order: [:month, :day, :year], label: 'End Date', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings', tabindex: '7', maxlength: '50' } %>
        <%= f.input :start_time, as: :time, :time_separator => "", ampm: true, :default => {:hour => '0', :minute => '00'}, label: 'Start Time', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings', tabindex: '8', maxlength: '50' } %>
        <%= f.input :end_time, as: :time, :time_separator => "", ampm: true, :default => {:hour => '0', :minute => '00'}, label: 'End Time', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings', tabindex: '9', maxlength: '50' } %>
      </fieldset>
    </div>

    <div id="where" class="tab-pane">
      <fieldset>
        <legend class="descriptors">Location, Location, Location</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Where should we show up?
            </li>
          </ul>
        </div>
        <%= f.input :location, label: 'Location Name', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings loc_in', tabindex: '10', id: '', maxlength: '100' } %>
        <%= f.input :address, label: 'Address', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings adr_in', tabindex: '11', maxlength: '50' } %>
        <%= f.input :city, label: 'City', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings cit_in', tabindex: '12', maxlength: '50' } %>
        <%= f.input :state, label: 'State', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings cit_in', tabindex: '13', maxlength: '50' } %>
        <%= f.input :zipcode, label: 'Zip Code', error: false, input_html: { cols: '60', rows: '1', class: 'forms account settings', tabindex: '14', maxlength: '9' } %>
        <%= f.input :country, label: 'Country', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings cit_in', tabindex: '15', maxlength: '50' } %>
      </fieldset>
    </div>

    <div id="details" class="tab-pane">
      <fieldset>
        <legend class="descriptors">Provide Event Details</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Tell us about your awesome event (Required)
            </li>
          </ul>
        </div>
        <%= f.input :blurb, label: false, error: false, placeholder: 'Give us the short version...', input_html: { cols: '55', rows: '1', class: 'forms bl_in', id: 'p_cap_blb', tabindex: '16', maxlength: '140', autocomplete: 'off' } %>
          <div class="p_blb_ct"><span class="p_ct_blb"></span> <span class="p_ct_text">characters remaining</span></div>
        <%= f.input :details, label: 'Details', error: false, placeholder: 'Now the long version...', input_html: { cols: '55', rows: '10', class: 'forms account settings', tabindex: '17', id: 'p_about' } %>
      </fieldset>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-event' %>
      </div>
    </div>
  </div>

<% end %>