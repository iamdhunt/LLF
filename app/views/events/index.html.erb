<% title "LLF x Events" %>

<%= render :partial => "banner" %>

<div class="evts_wrap">

    <div id="sb_wrap" class="se_wrap">

        <div id="bc_wrap">
            <div class="popular">
              <%= link_to popular_events_path, title: 'Popular Events', alt: 'Popular Events' do %>
                <i class="fa fa-heart"></i>Popular
              <% end %>
            </div>
        </div>

        <div class="sb_text">
            Look up an event name, tag, or location
        </div>
        <div class="sb">
          <%= render :partial => "search" %>
        </div>

    </div>

    <div id="p_index">

            <div id="prs_wrap">

                <% if @facet == nil && @query == nil && @tag_facet == nil && @location_facet == nil %>
                    <div id="media_query_prev">
                        <div class="ev_sep">
                            <span class="ev_hd">
                                Current Events
                            </span>
                            <span class="ev_vm">
                                <%= link_to(current_events_path, class: "") do %>
                                    View more
                                <% end %>
                            </span>
                        </div>

                        <div id="prs">
                            <%= render partial: 'current' %>
                        </div>
                    </div>
                <% end %>

                <% if @facet == nil && @query == nil && @tag_facet == nil && @location_facet == nil %>
                    <div id="media_query_prev">
                        <div class="ev_sep">
                            <span class="ev_hd">
                                Past Events
                            </span>
                            <span class="ev_vm">
                                <%= link_to(past_events_path, class: "") do %>
                                    View more
                                <% end %>
                            </span>
                        </div>

                        <div id="prs2">
                            <%= render partial: 'past' %> 
                        </div>
                    </div>
                <% end %>

                <% if @facet == nil && @query == nil && @tag_facet == nil && @location_facet == nil %>
                    <%= will_paginate @events, class: 'display_none' %>

                    <% if @events.total_pages != @events.current_page %>
                    <div id="loading"></div>
                    <%= link_to("#", class: "com_show_wrap load_arrow") do %>
                          <div class="com_show">
                            Show More
                          </div>
                        <% end %>
                    <% end %>
                <% else %>
                    <%= will_paginate @results, class: 'display_none' %>

                    <% if @results.total_pages != @results.current_page %>
                    <div id="loading"></div>
                    <%= link_to("#", class: "com_show_wrap load_arrow") do %>
                          <div class="com_show">
                            Show More
                          </div>
                        <% end %>
                    <% end %>
                <% end %>
            </div>
            
    </div>

</div>