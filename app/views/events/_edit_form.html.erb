<%= simple_form_for(@event, :html => { class: 'form-horizontal ' }) do |f| %>
  <%= f.error_notification %>

  <div id="ed_pr_head">
    <div class="e1 list">
      <%= @event.name %>
    </div>
    <% if @event.category? %>
      <div class="e2 list">
        <%= @event.category %>
      </div>
    <% end %>
  </div>

  <div class="rq">
    * = required field
  </div>

  <div class="tab-content">
    <div id="basics" class="tab-pane active">
      <fieldset>
        <legend class="descriptors">Choose Your Tags</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Provide up to three of the event's most relevant tags
            </li>
            <li>
              &raquo; Comma separated, 15 characters per
            </li>
          </ul>
        </div>
        <%= f.input :tag_list, label: 'Tags', error: false, input_html: { cols: '55', rows: '1', class: 'forms account settings', tabindex: '1'} %>
      </fieldset>

      <fieldset>
        <legend class="descriptors">Provide Some Links</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Paste or type the full url's (i.e. http://havenforthebold.tv/)
            </li>
            <li>
              &raquo; YouTube/Vimeo Share URL
            </li>
          </ul>
        </div>
        <%= f.input :website, label: 'Website', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings w_in', tabindex: '2' } %>
        <%= f.input :video, label: 'Video URL', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings vid_in', tabindex: '3' } %>
      </fieldset>
    </div>
    
    <div id="images" class="tab-pane">
      <fieldset>
        <legend class="descriptors">Upload Some Images</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Recommended avatar dimensions of 200x200
            </li>
            <li>
              &raquo; Recommended banner dimensions of 1400x200
            </li>
            <li>
              &raquo; Maximum file size of 10MB
            </li>
            <li>
              &raquo; Accepted file formats: (jpeg, png, gif)
            </li>
          </ul>
        </div>
        <%= f.input :avatar, as: :file, label: 'Avatar', error: false, input_html: { class: 'account pr_upload'} %>
        <div class="edit_pr_av">
          <% if f.object.avatar? %>
            <%= image_tag f.object.avatar.url(:av) %>
          <% end %>
        </div>
        <%= f.input :banner, as: :file, label: 'Banner', error: false, input_html: { class: 'account pr_upload'} %>
        <div class="edit_pr_av">
          <% if f.object.banner? %>
            <%= image_tag f.object.banner.url(:preview) %>
          <% end %>
        </div>
      </fieldset>
    </div>

    <div id="when" class="tab-pane">
      <fieldset>
        <legend class="descriptors">When should we show up?</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; 12am to 12am represents an all day event
            </li>
          </ul>
        </div>
        <%= f.input :start_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 10,  order: [:month, :day, :year], label: 'Start Date', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings', tabindex: '5', maxlength: '50' } %>
        <%= f.input :end_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 10, order: [:month, :day, :year], label: 'End Date', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings', tabindex: '6', maxlength: '50' } %>
        <%= f.input :start_time, as: :time, :time_separator => "", ampm: true, :default => {:hour => '0', :minute => '00'}, label: 'Start Time', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings', tabindex: '5', maxlength: '50' } %>
        <%= f.input :end_time, as: :time, :time_separator => "", ampm: true, :default => {:hour => '0', :minute => '00'}, label: 'End Time', error: false, input_html: { cols: '52', rows: '1', class: 'forms settings', tabindex: '5', maxlength: '50' } %>
      </fieldset>
    </div>

    <div id="where" class="tab-pane">
      <fieldset>
        <legend class="descriptors">Location, Location, Location</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Where should we show up?
            </li>
          </ul>
        </div>
        <%= f.input :location, label: 'Location Name', error: false, input_html: { cols: '52', rows: '1', class: 'forms loc_in', tabindex: '4', id: 'e_loc_in', maxlength: '30' } %>
        <div class="e_loc_ct"><span class="e_ct_loc"></span> <span class="e_ct_text">characters remaining</span></div>
        <%= f.input :address, label: 'Address', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings adr_in', tabindex: '5', maxlength: '50' } %>
        <%= f.input :city, label: 'City', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings cit_in', tabindex: '6', maxlength: '50' } %>
        <%= f.input :state, label: 'State', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings cit_in', tabindex: '7', maxlength: '50' } %>
        <%= f.input :zipcode, label: 'Zip Code', error: false, input_html: { cols: '60', rows: '1', class: 'forms account settings', tabindex: '8', maxlength: '9' } %>
        <%= f.input :country, label: 'Country', error: false, input_html: { cols: '52', rows: '1', class: 'forms account settings cit_in', tabindex: '9', maxlength: '50' } %>
      </fieldset>
    </div>

    <div id="details" class="tab-pane">
      <fieldset>
        <legend class="descriptors">Event Details</legend>
        <div class="edit_instructions">
          <ul>
            <li>
              &raquo; Tell us about your awesome event (Required)
            </li>
          </ul>
        </div>
        <%= f.input :blurb, label: false, error: false, placeholder: 'Give us the short version...', input_html: { cols: '52', rows: '1', class: 'forms bl_in', id: 'p_cap_blb', tabindex: '10', maxlength: '140' } %>
          <div class="p_blb_ct"><span class="p_ct_blb"></span> <span class="p_ct_text">characters remaining</span></div>
        <%= f.input :details, label: 'Details', error: false, input_html: { cols: '52', rows: '10', class: 'forms account settings', tabindex: '11', id: 'p_about' } %>
      </fieldset>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-event pull-left' %>
    <%= link_to "Back", event_path(@event), :class => 'btn btn-info pull-right' %>
  </div>
<% end %>