<% if @event.votes.size > 0 && current_member.voted_up_on?(@event) %>
  <%= link_to '<i class="fa fa-heart"></i>'.html_safe, favorite_event_path(@event), method: :put, :remote => true, title: "Unfavorite", alt: "Unfavorite", class: "unfav" %>
<% else %>
  <%= link_to '<i class="fa fa-heart"></i>'.html_safe, favorite_event_path(@event), method: :put, :remote => true, title: "Favorite", alt: "Favorite" %>
<% end %>