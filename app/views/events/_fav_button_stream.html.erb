<% if event.votes.size > 0 && current_member.voted_up_on?(event) %>

	<%= link_to favorite_event_path(event), remote: true, method: :put, title: "Unfavorite", alt: "Unfavorite", :class => "" do %>
        <i class="fa fa-heart ims-act fav_e_p unfav"></i>
    <% end %>

<% else %>
	
	<%= link_to favorite_event_path(event), remote: true, method: :put, title: "Favorite", alt: "Favorite", :class => "" do %>
        <i class="fa fa-heart ims-act fav_e_p"></i>
    <% end %>

<% end %>