<%= simple_form_for(@status, html: { multipart: true, :id => 'status_form' }) do |f| %>

  <div class="">
      
        <%= f.input :content, label: false, input_html: { class: 'forms', id: 'edit_update_box', tabindex: '1', rows: '1', maxlength: '280', style: 'width:100%;' } %>

        <div class="" id="action_wrap">

          <span class="">
            <%= f.submit "Update Status", :class => 'btn btn-info' %>
          </span>

          <span id="spinner" class="spinner">
            <%= image_tag '/assets/ajax-loader-(7).gif', id: 'img-spinner', alt: 'Loading' %>
          </span>

          <span id="edit_count"></span>

        </div>
      
  </div>

<% end %>