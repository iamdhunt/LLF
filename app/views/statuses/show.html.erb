<% title @status.member.full_name + " | Status"%>

<div id="main_wrap">

	<div id="status_show">

		<div class="list_act_wrap">

			<div class="act_status_top">
				<span class="">
					<%= avatar_profile_link @status.member, :class => "act_av" %>
				</span>

				<span class="act_name">
					<%= link_to @status.member.user_name, profile_path(@status.member) %>
				</span>

				<% if @status.member == current_member %>
					<div class="act_delete">
					    <%= link_to image_tag("delete-6-icon.png"), status_path, method: :delete, data: { confirm: 'Are you sure?' } %>
					</div>
				<% end %>

				<span class="meta"> 
					<%= time_ago_in_words(@status.created_at) %>
				</span>
			</div>

			<div class="act_content">
				<%= Rinku.auto_link(@status.content).html_safe %>
			</div>

			<div class="act_attachment">
			    <%= status_document_link(@status) %>
			</div>

			<% if member_signed_in? %>
				<%= render "comment_form" %>

				<div id="comments_wrap">
					<%= render "comments" %>
				</div>

				<%= will_paginate @comments, class: 'display_none' %>

				<% if @comments.total_pages != @comments.current_page %>
					<div id="loading"></div>	
			        <%= link_to("#", class: "com_show_wrap load_arrow") do %>
			        	<div class="com_show">
			        		Show More
			        	</div>
			        <% end %>				    
				<% end %>
				
			<% end %>

		</div>

	</div>

</div>

<!--/main_wrap-->