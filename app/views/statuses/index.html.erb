<div id="activity_wrap"> 

	<h1>Stream</h1>

		<%= link_to 'Post a New Item', new_status_path, :class => 'btn btn-info' %>

		<% @statuses.each do |status| %>
			<div class="status">
                <div class="row">
                    <div class="span1">
                        Avatar
                    </div> 
                    <div class="span7">
        				<div class="status_name"><%= status.member.user_name %></div>
        				<div class="content"><%= status.content %></div>
        				<div class="meta">
        			    	<p><%= link_to time_ago_in_words(status.created_at) + " ago", status %></p>
        			    </div>
        			    <span class="ad_item">
        				    <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
        				</span>
                    </div>
                </div> 
			</div>
		<% end %> 

	<br />

<div style="clear: both;"></div>
</div>

<!--/activity_wrap-->