<% @comments.each do |comment| %>
	<div class="comments">
		<span class="comment_av">
			<%= comment_avatar_link comment.member, :class => "com_av" %>
		</span>
		<span>
			<div class="comment_name">
				<%= link_to comment.member.user_name, profile_path(comment.member) %>
			</div>
			<div class="meta">
				<%= time_ago_in_words(comment.created_at) %>
			</div>
			<div class="com_con">
				<%= comment.content %>
			</div>
		</span>
		<span class="comment_del">
			<%= link_to image_tag("delete-6-icon.png"), [@commentable, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
		</span>
	</div>
<% end %>