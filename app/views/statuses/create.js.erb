<% if @status.errors.any? %>
	$('i', '.custom-file-upload').removeClass("fa-check");
	$('i', '.custom-file-upload').addClass("fa-arrow-up");
	$('.cfu_label', '.custom-file-upload').css("background-color", '#f06048');
	$('#err_wrap').remove();
	$("#status_form").prepend("<%= escape_javascript(render('statuses/errors')) %>");
<% else %>
	var $container = $('#activity_stream_wrap') 
	$('#err_wrap').remove();
	$('i', '.custom-file-upload').removeClass("fa-check");
	$('i', '.custom-file-upload').addClass("fa-arrow-up");
	$('.cfu_label', '.custom-file-upload').css("background-color", '#f06048');
	$('#activity_stream_wrap').prepend("<%= escape_javascript(render :partial => 'activities/status/created', :locals => {:activity => @activity}) %>");
	$('#activity_stream_wrap').imagesLoaded(function() {
		$('#activity_stream_wrap').isotope( 'reloadItems' ).isotope({ sortBy: 'original-order' });
	});
	$('#stat_count').html("280");
	$('#status_form')[0].reset();
<% end %>