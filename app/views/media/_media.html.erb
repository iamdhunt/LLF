<% @media.each do |medium| %>

  <div class="list_act_wrap">

    <div class="act_media_top">
      <span class="">
        <%= avatar_profile_link medium.member, :class => "act_av" %>
      </span>

      <span class="act_name">
        <%= link_to medium.member.user_name, profile_path(medium.member) %> 
      </span>

      <% if medium.member == current_member %>
        <div class="act_delete">
            <%= link_to image_tag("delete-6-icon.png"), medium, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %> 

      <span class="meta"> 
        <%= time_ago_in_words(medium.created_at) %>
      </span>
    </div>

    <div class="act_media_content">
      <%= link_to image_tag(medium.asset.url(:list), class: ''), medium.asset.url(:large), class: "fancybox", rel: 'media_gall' %>
    </div>

    <div id="fancyboxTitles" style="display: none;">
        <div><%= medium.caption %></div>
    </div>

    <% if medium.caption? %>
      <div class="media_act_cap">
        <%= medium.caption %>
      </div> 
    <% end %>

    <% if member_signed_in? %>
      <div class="actions_act">
        <span id="comment_act_btn">
          <%= link_to image_tag("Comment 3.png", class: "act_actions", title: "Comments", alt: "Comments") + 'Comment', medium_path(medium), :class => "btn comment" %>
          <%= link_to image_tag("Favorite 5.png", class: "act_actions", title: "Comments", alt: "Comments") + 'Favorite', "#", :class => "btn favorite" %>
        </span>
      </div>
    <% end %>

  </div>

<% end %>