<%= simple_form_for(@medium, :html => { :id => 'media_form', :class => 'new_medium', :multipart => true }, remote: true) do |f| %>

  <div class="form-inputs">

    <div class="md_hd pa">PHOTOS/AUDIO</div>

    <div class="med_instructions">
      <ul>
        <li>
          &raquo; Maximum file size of 15MB
        </li>
        <li>
          &raquo; Accepted file formats: (jpeg, png, mp3)
        </li>
        <li>
          &raquo; (Optional) Attach audio cover art
        </li>
      </ul>
    </div>

    <div>
      <span class="custom-file-upload fu1_wrap">
        <label for="file-upload" class="cfu_label"><i class="fa fa-arrow-up"></i>Browse
          <%= f.input :asset, label: false, error: false, as: :file, :input_html => { id: 'file-upload', class: 'cfu' } %>
        </label>
      </span>

      <span class="custom-file-upload fu2_wrap">
        <label for="file-upload2" class="cfu_label"><i class="fa fa-arrow-up"></i>Cover Art
          <%= f.input :cover, label: false, error: false, as: :file, :input_html => { id: 'file-upload2', class: 'cfu' } %>
        </label>
      </span>
    </div>

    <div class="md_hd vd">VIDEO/AUDIO LINK</div>

    <div class="med_instructions">
      <ul>
        <li>
          &raquo; We support YouTube, Vimeo, and Soundcloud
        </li>
      </ul>
    </div>

    <div class="c_f_labels">
      <div id="custom-input">
          <div class="input-group col-md-12 single_row">
              <%= f.input :link, as: :string, label: false, error: false, input_html: { cols: '40', rows: '1', class: 'input-xlarge', autocomplete: 'off' }, placeholder: 'http://' %>
          </div>
      </div>
    </div>

    <div class="cap">
    	<span id="cap_count"></span> <span class="cap_remain">CHARACTERS REMAINING
    </div> 
    <%= f.input :caption, label: false, error: false, placeholder: 'Write a short description...', input_html: { rows: '1', maxlength: '280', class: 'input-xlarge txt_a_size cap_input', id: 'cap_box', autocomplete: 'off' } %>

  </div>

  <div class="med_instructions">
    <ul class="m_ts">
      <li>
        &raquo; Provide up to 5 of the most relevant tags
      </li>
      <li>
        &raquo; Comma separated, 30 characters per 
      </li>
      <li>
        &raquo; Alphanumeric, no special characters
      </li>
    </ul>
  </div>

  <div id="custom-select" class="c_f_labels">
    <%= f.input :marker_list, label: false, error: false, placeholder: 'i.e. Music, Pop Art, Design, etc...', input_html: { rows: '1', class: 'input-xlarge custom-tags md_tags', autocomplete: 'off'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Add Media', :class => "btn btn-grey" %>
    <span id="spinner" class="spinner">
      <%= image_tag '/assets/ajax-loader-(7).gif', id: 'img-spinner', alt: 'Loading' %>
    </span>
    <%= link_to 'Cancel', {:controller => :profiles, :action => :media_cancel}, remote: true, :class => "btn btn-cancel pull-right", id: "mda_cancel" %>
  </div>

<% end %>
