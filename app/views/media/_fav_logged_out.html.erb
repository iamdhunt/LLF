<% if medium.votes.size > 0 && medium.votes.size <= 99 %>
	<span class="btn" title="Favorites" alt="Favorites">
		<%= image_tag("Favorite 5.png", class: "act_actions") %><%= medium.votes.size %>
	</span>
<% elsif medium.votes.size > 99 %>
  	<span class="btn" title="Favorites" alt="Favorites">
		<%= image_tag("Favorite 5.png", class: "act_actions") +'99+' %>
	</span>
<% else %>
  	<span class="btn" title="Favorites" alt="Favorites">
		<%= image_tag("Favorite 5.png", class: "act_actions ") %>
	</span>
<% end %>