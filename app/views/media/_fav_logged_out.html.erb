<% if medium.votes.size > 0 && medium.votes.size <= 99 %>
	<%= link_to sign_in_path, title: "Login to add to favorites", alt: "Login to add to favorites", :class => "btn favorite" do %>
        <i class="fa fa-heart act_actions fav_md"></i><%= medium.votes.size %>
    <% end %>
<% elsif medium.votes.size > 99 %>
	<%= link_to sign_in_path, title: "Login to add to favorites", alt: "Login to add to favorites", :class => "btn favorite" do %>
		<i class="fa fa-heart act_actions fav_md"></i>99+
	<% end %>
<% else %>
	<%= link_to sign_in_path, title: "Login to add to favorites", alt: "Login to add to favorites", :class => "btn favorite" do %>
		<i class="fa fa-heart act_actions fav_md"></i>
	<% end %>
<% end %>