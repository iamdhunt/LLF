<% title "Notifications"  %>

<div id="main_wrap">

	<div class="convos_wrap">

		<div class="not_head">
			<span class="not_t">Notifications (<%= @notifications_count %>)</span>
			<span class="not_r">
				<%= link_to update_all_notifications_path do %>
					<i class="icon-check icon-grey"></i> Mark all as read
				<% end %>
			</span>
		</div>

		<% @notifications.each do |notification|%>
	      	<% @notification = notification %>
	      	<div class="not_wrap">
	      		<span class="not_content"><%= link_to notification.subject, "#{root_url}#{notification.subject}" %> <%= notification.body %></span>
	      		<span class="not_meta"><%= time_ago_in_words(notification.created_at) %></span>
	  		</div>
	    <% end %>

	</div>

</div>